import request from '@/utils/request'

/* 角色权限树 */
export function getRoleTree(data) {
  return request({
    url: '/role/tree',
    method: 'post',
    data
  })
}
export function getRoleList(data) {
  return request({
    url: '/role/list',
    method: 'post',
    data
  })
}

